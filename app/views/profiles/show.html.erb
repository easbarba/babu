<div class="row">
  <section class="col">
    <h3><%= @profile.name.capitalize %></h3>
    <p><%= @profile.bio %></p>

    <% if @all_permissions %>
      <%= link_to 'Editar Bio', edit_profile_path, class: "btn btn-primary" %>
    <% end %>
  </section>

  <section class="col">
    <h3>Suas est√≥rias (<%= @profile.user.posts.count %>)</h3>
    <ul>
      <% @posts.each do |post| %>
        <li>
          <%= link_to post.title, post, class: 'link-dark' %>
          <small class="grey"><%= post.created_at.to_date %></small>
        </li>
      <% end  %>
    </ul>
    <%= link_to_next_page @posts, 'antigas', class: 'btn btn-outline-primary' %>
    <%= link_to_previous_page @posts, 'novas', class: 'btn btn-outline-primary' %>
  </section>
</div>
