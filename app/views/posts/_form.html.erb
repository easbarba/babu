<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card mb-2 mt-2">
    <div class="card-body">
      <h2 class="card-title"><%= main_title %></h2>
      <div class="form-group mb-2">
        <%= form.text_field :title, placeholder: "titulo",  class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.text_area :body, placeholder: "estoria", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit 'Enviar', class: "btn btn-warning btn-block mt-2" %>
      </div>
    </div>
  </div>
<% end %>

