<div>
  <h2><%= @post.title %></h2>
  <p><small class="opacity-70 text-nowrap"><%= @post.user.name %> | <%= @post.created_at.to_date %></small></p>
  <p><%= @post.body %></p>

  <% if user_signed_in? && current_user == @post.user %>
    <%= link_to 'Editar', edit_post_path(@post), class: "btn btn-warning" %>
    <%= link_to 'Deletar', @post, method: :delete, class: "btn btn-warning", data: { confirm: 'Tem certeza?' } %>
  <% end %>

  <%= link_to 'Voltar', posts_path, class: "btn btn-primary" %>
</div>
