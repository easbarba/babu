<% @posts.each do |post| %>
  <a href='<%= "#{posts_path}/#{post.id}" %>' class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
    <img src="https://cdn4.iconfinder.com/data/icons/gadgets-3/130/_Lego-512.png" alt="twbs" class="rounded-circle flex-shrink-0" width="32" height="32">
    <div class="d-flex gap-2 w-100 justify-content-between">
      <div>
        <h6 class="mb-0"><%= post.title %></h6>
        <p class="mb-0 opacity-75"><%= post.body.truncate 80 %></p>
      </div>
      <small class="opacity-50 text-nowrap"><%= post.user.name %></small>
    </div>
  </a>
<% end %>

