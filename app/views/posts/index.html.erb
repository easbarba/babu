<h4>Estórias</h4>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Aonde</th>
      <!-- <th>Excerpt</th> -->
      <th>Cor</th>
      <!-- <th>Published at</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.location %></td>
        <!-- <td><%#= post.excerpt %></td> -->
        <td><%= post.body %></td>
        <!-- <td><%#= post.published_at %></td> -->
        <td><%= link_to 'Mostrar', post %></td>
        <td><%= link_to 'Editar', edit_post_path(post) %></td>
        <td><%= link_to 'Deletar', post, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova estória', new_post_path %>
