<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <br />
    <%= f.text_field :name, placeholder: 'nome', class: 'form-control' %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.text_field :surname, placeholder: 'sobrenome', class: 'form-control' %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email', class: 'form-control' %>
  </div>

  <div class="field">
    <br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'senha (10)', class: 'form-control' %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'senha', class: 'form-control' %>
  </div>

  <div class="actions">
    <br />
    <%= f.submit "Registrar", class: 'btn btn-primary mb-1' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
