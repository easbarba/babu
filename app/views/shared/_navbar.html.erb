<header class="py-3">
    <div class="mx-4 d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <%= link_to "Babu", root_path, id: "logo", class: 'navbar-brand bi me-2 pb-2' %>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
            <li><%= link_to 'Estórias', posts_path, class: "nav-link px-2" %></li>
            <li><%= link_to 'Ler código-fonte', 'https://github.com/easbarba/babu', class: 'nav-link px-2' %></li>
        </ul>

        <div class="mx-2">
            <% if user_signed_in? %>
                <%= link_to current_user.name.capitalize, profile_path(current_user.profile.id), class: "btn btn-outline-dark" %>
                <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
            <% else %>
                <%= link_to 'Entrar', new_user_session_path, class: "btn btn-outline-primary me-2" %>
                <%= link_to 'Registar', new_user_registration_path, class: "btn btn-success btn-registration" %>
            <% end %>
        </div>

        <form class="col-12 col-lg-auto" role="search">
            <input type="search" class="form-control" placeholder="Procurar..." aria-label="Search">
        </form>
    </div>
</header>
